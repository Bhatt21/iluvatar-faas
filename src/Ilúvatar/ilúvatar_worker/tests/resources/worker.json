{
  "name": "local",
  "address": "127.0.0.1",
  "port": 8079,
  "timeout_sec": 6000,
  "limits" : {
    "timeout_sec": 6000,
    "mem_min_mb": 5,
    "mem_max_mb": 2048,
    "cpu_max": 10
  },
  "invocation": {
    "retries": 0,
    "queue_sleep_ms": 1,
    "use_queue": true
  },
  "logging": {
    "level": "debug",
    "directory": "/tmp/ilúvatar/logs",
    "basename": "worker",
    "spanning": "NEW+CLOSE",
    "flame": "",
    "span_energy_monitoring": false
  },
  "container_resources": {
    "memory_mb": 10240,
    "cores": 16,
    "eviction": "LRU",
    "startup_timeout_ms": 10000,
    "memory_buffer_mb": 1024,
    "pool_freq_sec": 5,
    "backend": "containerd",
    "snapshotter": "zfs"
  },
  "networking": {
    "bridge": "IlWorkBr0",
    "cnitool": "/opt/cni/bin/cnitool",
    "cni_plugin_bin": "/opt/cni/bin",
    "cni_name": "il_worker_br",
    "use_pool": true,
    "pool_size": 10,
    "pool_freq_sec": 1,
    "hardware_interface": "enp4s0"
  },
  "load_balancer_url": "http://localhost:8078",
  "graphite": {
    "address": "localhost",
    "api_port": "80",
    "ingestion_port": "2003",
    "ingestion_udp": false
  },
  "energy": {
    "enable_rapl": true,
    "enable_ipmi": false,
    "enable_perf": true,
    "perf_stat_duration_ms": 1000,
    "ipmi_pass_file": "",
    "log_freq_ms": 1000,
    "log_folder": "/tmp/ilúvatar/logs/"
  }
}
